---
interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card">
  <a href={href}>
    <h2 class="text-2xl font-bold">
      {title}
      <span>&rarr;</span>
    </h2>
    <p class="text-red-400">
      {body}
    </p>
  </a>
</li>
