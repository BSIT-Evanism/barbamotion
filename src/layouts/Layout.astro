---
import LayoutWrapper from "../components/LayoutWrapper";
import Navbar from "../components/Navbar.astro";
import Preloader from "../components/Preloader.astro";
import ToggleBottomBar from "../components/ToggleBottomBar";
import { ViewTransitions } from "astro:transitions";
import ViewControl from "../components/ViewControl";
import Transition from "../components/Transition.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<head>
  <meta charset="UTF-8" />
  <meta name="description" content="Astro description" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="generator" content={Astro.generator} />
  <title>{title}</title>
  <!-- <ViewTransitions /> -->
</head>
<body class="relative" id="smooth-wrapper" data-barba="wrapper">
  <div id="smooth-content">
    <Transition />
    <Preloader />
    <ViewControl client:only>
      <Navbar />
    </ViewControl>
    <LayoutWrapper client:load>
      <slot />
    </LayoutWrapper>
    <ToggleBottomBar client:only />
  </div>
</body>

<style is:global>
  /* @import "/node_modules/locomotive-scroll/dist/locomotive-scroll.css"; */
  @import url("https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");
  #transitiondiv {
    transform: scaleX(0);
    top: 0;
    left: 0;
    transform-origin: center;
  }

  .stickycontainer {
    height: 200vh;
    background: white;
    width: 100%;
    position: relative;
  }

  .stickyobject {
    position: sticky;
    top: 0;
    height: 100vh;
    width: 100%;
    background: red;
  }

  /* * {
    border: 1px solid red;
  } */

  html {
    overflow-x: hidden;
    font-family: "Poppins", sans-serif;
  }
</style>

<script>
  // @ts-ignore
  import LocomotiveScroll from "locomotive-scroll";

  const locomotiveScroll = new LocomotiveScroll();
</script>
