---
import LayoutWrapper from "../components/LayoutWrapper";
import Navbar from "../components/Navbar.astro";
import Preloader from "../components/Preloader.astro";
import ToggleBottomBar from "../components/ToggleBottomBar";
import { ViewTransitions } from "astro:transitions";
import ViewControl from "../components/ViewControl";
import Transition from "../components/Transition.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<head>
  <meta charset="UTF-8" />
  <meta name="description" content="Astro description" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="generator" content={Astro.generator} />
  <title>{title}</title>
  <!-- <ViewTransitions /> -->
</head>
<body transition:animate="none" id="smooth-wrapper" data-barba="wrapper">
  <div id="smooth-content">
    <Transition />
    <Preloader />
    <ViewControl client:only>
      <Navbar />
    </ViewControl>
    <LayoutWrapper client:load>
      <slot />
    </LayoutWrapper>
    <ToggleBottomBar client:only />
  </div>
</body>

<style is:global>
  #transitiondiv {
    transform: scaleX(0);
    top: 0;
    left: 0;
    transform-origin: center;
  }

  /* * {
    border: 1px solid red;
  } */

  html {
    overflow-x: hidden;
  }
</style>
