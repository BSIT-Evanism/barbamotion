---
import Layout from "../layouts/Layout.astro";
---

<Layout title="about">
  <main
    id="aboutpage"
    class="p-4"
    data-barba="container"
    data-barba-namespace="about"
  >
    <h1 class="text-8xl font-bold" id="titlehome">About</h1>
    <div class="h-400vh bg-white relative">
      <div class="bg-red sticky top-20 h-10vh w-full"></div>
    </div>
  </main>
</Layout>

<script>
  import { animate, inView } from "motion";
  import barba from "@barba/core";

  inView("#aboutpage", (e) => {
    console.log(e);
    animate("#titlehome", { y: ["-100vh", 0] }, { duration: 3, delay: 1 });
  });
</script>
