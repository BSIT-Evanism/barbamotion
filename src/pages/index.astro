---
import Layout from "../layouts/Layout.astro";
import HeroSection from "../components/HeroSection/HeroSection";
import MarqueeComp from "../components/MarqueeComp/MarqueeComp";
import SecondSec from "../components/SecondSec";
import FixedImageReact from "../components/FixedImageReact";
import MidSection from "../components/MidSection";
import FixedImage from "../components/FixedImage.astro";
import FadingText from "../components/FadingText";
import { PositionButton } from "../components/Position-Button";
import { ProjectScroll } from "../components/ProjectScroll";
---

<Layout title="Evan Solanoy">
  <main
    id="indexpage"
    data-barba="container"
    data-barba-container="home"
    class="p-0.5px -z-2 bg-bgColor relative"
  >
    <div class="md:sticky md:top-20vh -z-1 -mb-100vh">
      <HeroSection client:only="react" />
      <div class="h-100vh"></div>
    </div>
    <div
      class="z-20 bg-secondary rounded-t-10vh pt-20 min-h-200vh md:min-h-400vh w-full pb-20"
    >
      <MarqueeComp client:only="react" />
      <div class="flex flex-col md:flex-row justify-between items-center">
        <div class="w-full md:w-1/2 flex justify-center items-center">
          <FixedImageReact client:only="react" />
        </div>
        <div class="w-full md:w-1/2">
          <FadingText client:only />
        </div>
      </div>
      <div
        class="md:min-h-320vh min-h-100vh w-full flex flex-col items-center px-4 md:px-0"
      >
        <h1
          class="text-center text-16px md:text-20px font-semibold mt-10 md:mt-20 pt-10 md:pt-20 border-t-2 text-white opacity-50 border-t-white"
        >
          A new tech doesn't always mean a new problem nor a new solution, it's
          an investment for the future.
        </h1>
        <PositionButton
          client:only="react"
          text="Visit Projects Page?"
          link="/projects"
        />
        <ProjectScroll client:only />
      </div>
    </div>

    <MidSection client:only="react" />

    <div
      id="contact"
      class="w-full min-h-100vh md:rounded-t-10vh rounded-t-0vh mt-10 md:-mt-100vh bg-primary z-1"
    >
      <div
        class="min-h-80vh flex justify-center items-center flex-col gap-4 md:gap-8 px-4 md:px-0"
      >
        <h1 class="text-white text-center text-4xl md:text-8xl font-semibold">
          Have a project in mind?
        </h1>
        <p class="text-white text-center text-lg md:text-2xl">
          I'm currently available for freelance work.
        </p>
        <PositionButton client:only="react" text="Contact Me" link="/contact" />
      </div>
      <div
        class="bg-platinum min-h-20vh rounded-t-10vh flex justify-center bottom-0 items-center sticky"
      >
        <div
          class="w-full md:w-80vw flex flex-col md:flex-row gap-4 md:gap-10 justify-between items-center px-4 md:px-10 py-4 md:py-0"
        >
          <div class="flex flex-wrap justify-center md:justify-start gap-2">
            <a
              href="https://linkedin.com/in/john-evan-solanoy-72b829262"
              target="_blank"
              class="text-sm md:text-md w-20 text-center">LinkedIn</a
            >
            <p class="hidden md:block">-</p>
            <a
              href="https://facebook.com/evan.solanoy.1/"
              target="_blank"
              class="text-sm md:text-md w-20 text-center">Facebook</a
            >
            <p class="hidden md:block">-</p>
            <a
              href="https://github.com/BSIT-Evanism"
              target="_blank"
              class="text-sm md:text-md w-20 text-center">Github</a
            >
            <p class="hidden md:block">-</p>
            <a
              href="https://t.me/evansolanoy"
              target="_blank"
              class="text-sm md:text-md w-20 text-center">Telegram</a
            >
          </div>
          <p
            class="text-center md:text-justify text-sm md:text-base w-full md:w-30%"
          >
            Designed and Developed by Evan Solanoy <br />
            ©2024 – All Rights Reserved <br />
            <a href="mailto:evansolanoy@gmail.com">evansolanoy@gmail.com</a>
          </p>
        </div>
      </div>
    </div>
  </main>
</Layout>

<script>
  import { routeName, handleMarquee } from "../globalStore";
</script>
