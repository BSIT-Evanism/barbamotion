---
import Layout from "../layouts/Layout.astro";
import ToggleBottomBar from "../components/ToggleBottomBar";
import HeroSection from "../components/HeroSection/HeroSection";
import FixedImage from "../components/FixedImage.astro";
import MarqueeComp from "../components/MarqueeComp/MarqueeComp";
import SecondSec from "../components/SecondSec";
import FixedImageReact from "../components/FixedImageReact";
---

<Layout title="Evan Solanoy">
