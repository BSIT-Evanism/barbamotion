      <HeroSection client:only />
      <div class="h-100vh"></div>
    </div>
    <div class="z-20 bg-secondary rounded-t-10vh pt-20 h-400vh w-full pb-20">
      <MarqueeComp client:only />
      <FixedImageReact client:only />
      <!-- <FixedImage /> -->
      <div class="h-150vh w-full"></div>
      <SecondSec client:load />
    </div>
    <div class="w-full h-300vh -mt-100vh -mb-100vh">
      <div
        class="h-100vh flex justify-center items-center w-full top-0 sticky bg-accent -z-1"
      >
        <div class="w-80vw">
          <h1 class="text-5xl text-center">Contact</h1>
          <p class="text-center">
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Quisquam
